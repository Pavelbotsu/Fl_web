@* Contact.cshtml *@
@{
    ViewData["Title"] = "Kontakt";
}

<div class="container my-5">
    <div class="card shadow-lg p-4 mb-5 bg-body rounded">
        <div class="card-body">
            <h1 class="display-4 text-center mb-5">Skontaktuj się z Nami</h1>

            <div class="row">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h2 class="text-pink mb-4">Dane Kontaktowe</h2>
                    <div class="contact-info">
                        <p class="fs-5">
                            <i class="bi bi-geo-alt-fill me-2"></i>
                            Głowackiego 26, 30-085 Kraków
                        </p>
                        <p class="fs-5">
                            <i class="bi bi-telephone-fill me-2"></i>
                            <a href="tel:+48574457642" class="text-dark">+48 574 457 642</a>
                        </p>
                        <p class="fs-5">
                            <i class="bi bi-facebook me-2"></i>
                            <a href="https://www.facebook.com/lashomeflowers" target="_blank" class="text-dark">
                                facebook.com/lashomeflowers
                            </a>
                        </p>
                    </div>

                    <div class="mt-5">
                        <h3 class="text-pink mb-4">Godziny Otwarcia</h3>
                        <p class="fs-5">24 godziny na dobę, 7 dni w tygodniu</p>
                    </div>

                    <div class="mt-5">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2561.674870416271!2d19.91221537697343!3d50.06026687152186!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165b5f3979b3a5%3A0x7db6de4243c6b8b3!2sG%C5%82owackiego%2026%2C%2030-085%20Krak%C3%B3w!5e0!3m2!1spl!2spl!4v1716828186031!5m2!1spl!2spl"
                                width="100%"
                                height="300"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy">
                        </iframe>
                    </div>
                </div>

                <div class="col-lg-6">
                    <h2 class="text-pink mb-4">Formularz Kontaktowy</h2>
                    <form>
                        <div class="mb-4">
                            <input type="text" class="form-control form-control-lg" placeholder="Imię i Nazwisko">
                        </div>
                        <div class="mb-4">
                            <input type="email" class="form-control form-control-lg" placeholder="Email">
                        </div>
                        <div class="mb-4">
                            <input type="tel" class="form-control form-control-lg" placeholder="Telefon">
                        </div>
                        <div class="mb-4">
                            <textarea class="form-control form-control-lg" rows="5" placeholder="Wiadomość"></textarea>
                        </div>
                        <button type="submit" class="btn btn-pink  w-100">Wyślij Wiadomość</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

