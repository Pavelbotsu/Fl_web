@model List<ProductModel>
@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">No products found</div>
}
else
{
<h1>@ViewData["Title"]</h1>
<div class="container-fluid mt-5">
        <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4 mb-4">

                        <div class="card h-100 shadow">
                            @if (!string.IsNullOrEmpty(product.Name))
                            {
                                <img src="@Url.Content(product.Images.First().ImageUrl)" class="card-img-top" alt="@product.Name" />
                            }
                            else
                            {
                                <img src="~/lib/images/placeholder.jpg" class="card-img-top" alt="@product.Name" />
                            }
                            <div class="card-body d-flex flex-column">
                                <!-- Content that sticks to the bottom -->
                                <div class="mt-auto">
                                    <h5 class="card-title">@product.Name</h5>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="text-primary mb-0">
                                             @product.Price.ToString("N2") zł
                                        </h5>
                                        <a asp-area="" asp-controller="PShop"
                                           asp-action="Product"
                                           asp-route-id="@product.ProductId" class="btn btn-primary">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
        </div>
</div>

}
