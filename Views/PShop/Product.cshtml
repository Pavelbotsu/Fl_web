@model Fl_web.Models.ProductModel;


@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>

<div class="container mt-auto">
    <div class="row">
        
         
                <!-- Large Image Display -->
                <img id="mainImage-@Model.ProductId" src="@Model.Images.First().ImageUrl" class="mt-5" alt="@Model.Name" style="max-height: 300px; object-fit: cover;">

                <!-- Thumbnails -->
                <div class="image-thumbnails d-flex justify-content-center">
                    @foreach (var img in Model.Images)
                    {
                        <img src="@img.ImageUrl"
                             onclick="changeImage('@Model.ProductId', '@img.ImageUrl')"
                             class="img-thumbnail mx-1"
                             style="width: 60px; height: 60px; object-fit: cover; cursor: pointer;">
                    }
                </div>

           
       
    </div>



        <!-- Product Details -->
        <div class="col-md-6">
            <div class="price-section mb-4">
                <h2 class="text-primary">@Model.Price zł</h2>

            </div>

            <div class="action-buttons mb-4">
                <button class="btn btn-primary btn-lg mr-2">Add to Cart</button>
                <button class="btn btn-outline-secondary btn-lg">Add to Wishlist</button>
            </div>

            <!-- Info Navigation Tabs -->
            <nav>
                <div class="nav nav-tabs" id="productTab" role="tablist">
                    <a class="nav-item nav-link active" id="about-tab" data-toggle="tab" href="#about" role="tab" aria-controls="about" aria-selected="true">
                        About
                    </a>
                    <!--<a class="nav-item nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">
                        Reviews
                    </a>-->
                    <a class="nav-item nav-link" id="specs-tab" data-toggle="tab" href="#specs" role="tab" aria-controls="specs" aria-selected="false">
                        Specifications
                    </a>
                </div>
            </nav>

            <div class="tab-content mt-3" id="productTabContent">
                <!-- About Tab -->
                <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="about-tab">
                    @Html.Raw(Model.Description)
                </div>
                <!-- Reviews Tab (if needed) -->
                <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                    <!-- Reviews content goes here -->
                </div>
                <!-- Specifications Tab (if needed) -->
                <div class="tab-pane fade" id="specs" role="tabpanel" aria-labelledby="specs-tab">
                    <!-- Specifications content goes here -->
                </div>
            </div>
        </div>
</div>
<script>
    function changeImage(productId, newImageUrl) {
        var mainImage = document.getElementById("mainImage-" + productId);
        if (mainImage) {
            mainImage.src = newImageUrl;
        }
    }
</script>
